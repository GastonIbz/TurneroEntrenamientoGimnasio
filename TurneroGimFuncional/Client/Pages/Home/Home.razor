@page "/Inicio"
@inject IHttpService http


<h3>Mis Turnos</h3>
<table>
    <tr>
        <th>Alumno</th>
         <th>Entrenamiento</th>
        <th>Fecha</th>
        <th>Hora</th>
      
    </tr>
    @if (inscripciones == null)

    {
        <tr>Cargando...</tr>
    }
    else if(inscripciones.Count == 0)
    {
        <tr>No fueron encontrado los datos.</tr>
    }
    else
    {
        @foreach(var item in inscripciones)
        {
            <tr>
                <td>@item.AlumnoId</td>
                <td>@item.EntrenamientoId </td>
                <td>@item.FechaTurno</td>

            
             
            </tr>
        }
    }
</table>


@code {
    List<Inscripcion> inscripciones;


    protected override async Task OnInitializedAsync()
    {
        base.OnInitializedAsync();
        await Leer();
    }

    private async Task Leer()
    {
        var respuesta = await http.Get<List<Inscripcion>>("api/Inscripcion");
        if(!respuesta.Error)
        {
            inscripciones = respuesta.Respuesta;
        }
    }

}
